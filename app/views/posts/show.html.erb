<%= @post.title %><br>
<%= @post.content %><br>

Comments: <br>
<ol>
<% @post.comments.each do |c| %>
    <%= c.user.username %> says: <%= c.content %>
<% end %>
</ol>
<br>

Users: <br>
<ol>
<% @post.users.uniq.each do |u| %>
    <%= link_to u.username, u %>
<% end %>
</ol>
<br>

Categories: <br>
<% @post.categories.each do |c| %>
    <%= c.name %><br>
<% end %>
<br>

<%= form_for @post.comments.build do |f| %>
    Comment: <br>
    <%= f.label :content %>
    <%= f.text_area :content %><br><br>
    <%= f.hidden_field :post_id %>

    User: <%= f.collection_select :user_id, User.all, :id, :username, include_blank: false %><br><br>
    Or, create a new user: <br><br>
    <%= f.fields_for :user, @post.comments.build.build_user do |user_fields| %>
        <%= user_fields.label :username %>
        <%= user_fields.text_field :username %><br><br>        
    <% end %>
    <br>
    
    <%= f.submit %>
<% end %>